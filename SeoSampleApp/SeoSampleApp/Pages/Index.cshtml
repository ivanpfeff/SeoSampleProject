@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>SEO Hit Query</h2>
<form class="mb-3">
    <div class="form-group">
        <label for="exampleInputEmail1">Search Term</label>
        <input type="text" data-bind="value: searchTerm" class="form-control" aria-describedby="searchTermHelp" placeholder="e.g. Cat Food">
        <small id="searchTermHelp" class="form-text text-muted">This is the search term which will be sent to google</small>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">URL</label>
        <input type="text" data-bind="value: searchURL" class="form-control" aria-describedby="searchUrlHelp" placeholder="chewy.com">
        <small id="searchUrlHelp" class="form-text text-muted">The URL you want to check the rank of in google's results</small>
    </div>
    <button type="submit" class="btn btn-primary" data-bind="click: doSearch">Search</button>
</form>
<div>
    <strong>
        <span data-bind="text: latestSearchText"></span>
    </strong>
</div>

<h3>Previous Search Results</h3>
<table class="table table-striped table-sm" style="display:none" data-bind="visible: hasSearchResults">
    <thead>
        <tr>
            <th>Date</th>
            <th>URL</th>
            <th>Search Term</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        <!-- ko foreach: previousSearches -->
        <tr>
            <td data-bind="text: date"></td>
            <td data-bind="text: searchTerm"></td>
            <td data-bind="text: url"></td>
            <td data-bind="text: $root.scoreFormat(score);"></td>
        </tr>
        <!-- /ko -->
    </tbody>
</table>


@section Scripts {
    <script src="~/js/search.js" asp-append-version="true"></script>
}